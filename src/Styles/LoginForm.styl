.login-form-wrapper
  display flex
  display: -webkit-flex;
  align-items center
  justify-content center
  width 100%
  height 100%
  margin auto
  position relative
  background $white
  line-height $xl

  .form-container
    position relative
    padding $xs
    width 100%
    height 100%
    max-width 380px
    max-height 700px
    display flex
    display: -webkit-flex;
    align-items center
    justify-content center
    flex-direction column

    .login-form
      margin 30px 0
      width 100%
            
    .logo
      width 100%
      text-align center


    .forgot-password-wrapper
      max-height 58px
      width 100%
      text-align center
      padding-top $xs
      padding-bottom $xs
      font-size $xs
