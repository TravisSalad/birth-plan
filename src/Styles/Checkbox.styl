.checkbox-wrapper
  padding 0 1em
  display inline-flex
  align-items flex-start

  &.right
    flex-direction row-reverse
    & > span.checkbox
      margin-right .5em

  &.left
    flex-direction row
    & > span.checkbox
      margin-left .5em

  &.top
    flex-direction column
    & > span.checkbox
      margin-top .5em

  &.bottom
    flex-direction column-reverse
    & > span.checkbox
      margin-bottom .5em

  .checkbox
    position relative
    cursor pointer
    display inline-block
    vertical-align text-top
    height 1.3em
    width 1.3em
    background-color white
    border 2px solid $black
    border-radius 2px

    &.checked
      background-color $primary-darker
      border-color $primary-darker

    .checkmark
      position absolute
      left -2px
      top -4px
      width 22px
      height 22px
      -ms-transform rotate(45deg)
      -webkit-transform rotate(45deg)
      transform rotate(45deg)

      .checkmark_stem
        position absolute
        width 2px
        height 13px
        background-color $white
        left 13px
        top 5px

      .checkmark_kick
        position absolute
        width 8px
        height 2px
        background-color $white
        left 7px
        top 16px
