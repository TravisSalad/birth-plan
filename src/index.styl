@require 'Styles/Theme.styl'
@require 'Styles/*'

html, body, #root, .App
  padding 0
  margin 0
  min-height 100vh
  min-width 100vw
  box-sizing border-box
  overflow-x hidden
  overflow-y auto
  background-color $white
  font-family Raleway, 'sans-serif'
  color $main-font

  *
    box-sizing border-box
    font-family Raleway, 'sans-serif'

h1,
h2,
h3,
h4,
h5,
h6
  margin-top .4em
  margin-bottom .4em
  padding 0px
