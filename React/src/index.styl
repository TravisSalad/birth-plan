@require 'Styles/Theme.styl'
@require 'Styles/*'

html, body, #app
  padding 0
  margin 0
  min-height: 100vh;
  min-width: 100vw;
  box-sizing: border-box;
  overflow-x: hidden;
  overflow-y: auto;
  background-color $main-font-lightest
  font-family Raleway, 'sans-serif'
  color $main-font

  *
    box-sizing border-box

h1,
h2,
h3,
h4,
h5,
h6
  margin-top $xs
  margin-bottom $xs
  padding 0px
