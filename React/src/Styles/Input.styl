.input-container
  width 100%
  color lighten($main-font, 20%)
  position relative
  input
    color darken($main-font, 50%)
    font-family Raleway, 'sans-serif'
    padding 0
    margin 0
    background transparent
    width 100%
    font-size md
    height 35px
    border none
    border-bottom 1px solid lighten($main-font, 20%)
    display block
    &:focus
      outline none

  label
    font-size md
    display block
    position: absolute;
    top: 9px;
    left: 1px;
    pointer-events none
    transition 0.2s ease all
    -moz-transition 0.2s ease all
    -webkit-transition 0.2s ease all

  .text-input:focus ~ label,
  .label.has-text
    font-size xs
    color $primary
    top -10px

  .text-input:focus+.underline
    transform scale(1)

  .underline
    position relative
    display block
    margin-top -1px
    height 2px
    width 100%
    background-color $primary
    -webkit-transform: scale(0, 1);
    transform: scale(0, 1);
    -webkit-transition: all 0.3s linear;
    transition: all 0.3s linear;
