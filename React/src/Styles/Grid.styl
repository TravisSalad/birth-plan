base = (100/12)

.row
  float left
  position relative
  width 100%

for i in 1..12
  .col-{i}
    width unit(base * i, "%")
    float left
    padding-left $xs
    padding-right $xs
    &.center
      text-align center !important
    &.right
      text-align right !important
    &.middle
      margin auto !important

@media screen and (max-width $media-medium)
  for i in 1..3
    .col-{i}
      width 25%
  for i in 4..6
    .col-{i}
      width 50%
  for i in 7..12
    .col-{i}
      width 100%

@media screen and (max-width $media-small)
  for i in 1..2
    .col-{i}
      width 50%
  for i in 3..12
    .col-{i}
      width 100%
