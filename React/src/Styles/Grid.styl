base = (100/12)

.row
  float left
  position relative
  width 100%

for i in 1..12
  .col-{i}
    width unit(base * i, "%")
    box-sizing border-box
    float left
    padding xs
    &.center
      text-align center !important
    &.right
      text-align right !important
    &.middle
      margin auto !important

@media screen and (max-width: 800px)
  for i in 1..3
    .col-{i}
      width 50%
  for i in 4..12
    .col-{i}
      width 100%

@media screen and (max-width: 600px)
  for i in 1..3
    .col-{i}
      width 100%
